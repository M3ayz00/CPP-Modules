CXX = c++
CXXFLAGS = -Wall -Wextra -Werror
SRCS = main.cpp 
OBJS = $(SRCS:.cpp=.o)
NAME = template

all : $(NAME)

$(NAME) : $(OBJS)
	$(CXX) $(CXXFLAGS) $^ -o $@

clean :
	@rm -rf $(OBJS)

fclean : clean
	@rm -rf $(NAME)

re : fclean all