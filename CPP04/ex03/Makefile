CC = c++
CFLAGS = -std=c++98 -Wall -Wextra -Werror
SRCS = main.cpp AMateria.cpp Ice.cpp Cure.cpp IMateriaSource.cpp Icharacter.cpp Character.cpp
OBJS = $(SRCS:.cpp=.o)
NAME = Materias

all : $(NAME)

%.o : %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

$(NAME) : $(OBJS)
	@$(CC) $(CFLAGS) $^ -o $@

clean :
	@rm -rf $(OBJS)

fclean : clean
	@rm -rf $(NAME)

re : fclean all
